# Golang CI configuration file
# Check https://golangci-lint.run/docs/configuration/file/
version: "2"
run:
  timeout: 5m

linters:
  default: standard
  settings:
    gocyclo:
      min-complexity: 20

formatters:
  enable:
    - gofumpt
    - gci
  settings:
    gci:
      sections:
        - standard
        - default
        - prefix({{ go_module }})
        - blank
        - dot
        - alias
        - localmodule
